<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="8dp"
    android:clipChildren="false"
    android:clipToPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_muscular_group"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_image_muscular"
            android:layout_height="@dimen/size_image_muscular"
            android:layout_gravity="center"
            android:contentDescription="@string/content_description"
            android:gravity="center"
            tools:src="@drawable/iv_notes" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0.75dp"
            android:layout_marginVertical="@dimen/margin_padding_xmedium"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/MediumTextView_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:textAllCaps="true"
            tools:text="Mis rutinas" />

        <TextView
            android:id="@+id/tv_description"
            style="@style/SmallTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAllCaps="true"
            tools:text="Bla bla bla bla" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>