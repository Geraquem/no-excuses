<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_medium"
    android:background="@drawable/bg_muscular_group"
    android:elevation="@dimen/elevation_default"
    android:paddingHorizontal="@dimen/margin_padding_medium"
    android:paddingVertical="@dimen/margin_padding_large">

    <TextView
        android:id="@+id/tv_name"
        style="@style/MediumTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_padding_medium"
        android:textAllCaps="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/check"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Press banca en banco plano con mancuernas" />

    <ImageView
        android:id="@+id/check"
        android:layout_width="@dimen/margin_padding_xlarge"
        android:layout_height="@dimen/margin_padding_xlarge"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_uncheck"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>