<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_box"
        android:elevation="@dimen/elevation_default"
        android:orientation="vertical"
        android:padding="@dimen/margin_padding_large"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/size_image_muscular"
            android:layout_height="@dimen/size_image_muscular"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_padding_xmedium"
            android:contentDescription="@string/content_description"
            android:gravity="center"
            tools:src="@drawable/iv_hombros" />

        <TextView
            android:id="@+id/tv_name"
            style="@style/MediumTextView_Bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:textAllCaps="true"
            tools:text="PECHO" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>