<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_padding_medium"
    android:background="@drawable/bg_muscular_group"
    android:elevation="@dimen/elevation_default"
    android:padding="@dimen/margin_padding_medium">

    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/size_image_xbig"
        android:layout_height="@dimen/size_image_xbig"
        android:contentDescription="@string/content_description"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/margin_padding_xmedium"
        android:orientation="vertical"
        app:layout_constraintLeft_toRightOf="@id/image"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_category"
                style="@style/MediumTextView_Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="start"
                android:textAllCaps="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="PECHO" />

            <ImageView
                android:id="@+id/delete"
                android:layout_width="@dimen/margin_padding_xlarge"
                android:layout_height="@dimen/margin_padding_xlarge"
                android:contentDescription="@string/content_description"
                android:padding="@dimen/margin_padding_xxsmall"
                android:src="@drawable/ic_cross"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                tools:visibility="visible" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_name"
            style="@style/MediumTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_padding_xxsmall"
            android:textAllCaps="true"
            tools:text="Press banca en banco plano" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>