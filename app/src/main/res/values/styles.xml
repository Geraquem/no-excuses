<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SmallTextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SmallTextView_Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MediumTextView_Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BigTextView">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="BigTextView_Bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:paddingVertical">12dp</item>
    </style>

    <style name="scroll_no_effects">
        <item name="android:scrollbars">none</item>
        <item name="android:overScrollMode">never</item>
    </style>

    <style name="circular_image">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="slide_up_down_dialog">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="BottomSheetDialogThemeNoFloating" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize|stateVisible</item>
    </style>

    <style name="DatePickerTheme" parent="android:ThemeOverlay.Material.Dialog">
        <item name="colorAccent">@color/teal_700</item>
        <item name="colorPrimary">@color/teal_700</item>
    </style>

</resources>