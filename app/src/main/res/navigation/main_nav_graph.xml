<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/initFragment">

    <fragment
        android:id="@+id/initFragment"
        android:name="com.mmfsin.noexcuses.presentation.init.InitFragment"
        tools:layout="@layout/fragment_init">
        <action
            android:id="@+id/action_init_to_phases"
            app:destination="@id/phasesFragment" />
        <action
            android:id="@+id/action_phases_to_muscularGroups"
            app:destination="@id/muscularGroupsFragment" />
    </fragment>

    <fragment
        android:id="@+id/phasesFragment"
        android:name="com.mmfsin.noexcuses.presentation.phases.PhasesFragment"
        tools:layout="@layout/fragment_phases">
        <action
            android:id="@+id/action_phases_to_routines"
            app:destination="@id/daysFragment">
            <argument
                android:name="phase"
                app:argType="com.mmfsin.noexcuses.domain.models.Phase" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/daysFragment"
        android:name="com.mmfsin.noexcuses.presentation.days.DaysFragment"
        tools:layout="@layout/fragment_days">
        <action
            android:id="@+id/action_phases_to_muscularGroups"
            app:destination="@id/muscularGroupsFragment">
            <argument
                android:name="dayId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/muscularGroupsFragment"
        android:name="com.mmfsin.noexcuses.presentation.musculargroups.MGroupsFragment"
        tools:layout="@layout/fragment_muscular_groups">
        <action
            android:id="@+id/action_muscularGroups_to_exercises"
            app:destination="@id/exercisesFragment">
            <argument
                android:name="name"
                app:argType="string" />
        </action>
        <action
            android:id="@+id/action_muscularGroups_to_chooseExercises"
            app:destination="@id/chooseExercisesFragment">
            <argument
                android:name="name"
                app:argType="string" />
            <argument
                android:name="dayId"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/exercisesFragment"
        android:name="com.mmfsin.noexcuses.presentation.exercises.ExercisesFragment"
        tools:layout="@layout/fragment_exercises" />

    <fragment
        android:id="@+id/chooseExercisesFragment"
        android:name="com.mmfsin.noexcuses.presentation.chooseexercises.ChExercisesFragment"
        tools:layout="@layout/fragment_exercises" />

</navigation>