<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/routine_nav_graph"
    app:startDestination="@id/routinesFragment">

    <fragment
        android:id="@+id/routinesFragment"
        android:name="com.mmfsin.noexcuses.presentation.routines.routines.RoutinesFragment"
        android:label="routinesFragment"
        tools:layout="@layout/fragment_routines">
        <action
            android:id="@+id/action_routines_to_mGroups"
            app:destination="@id/chMGroupsFragment">
            <argument
                android:name="idGroup"
                app:argType="com.mmfsin.noexcuses.presentation.models.IdGroup" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/chMGroupsFragment"
        android:name="com.mmfsin.noexcuses.presentation.routines.mgroups.ChMGroupsFragment"
        android:label="chMGroupsFragment"
        tools:layout="@layout/fragment_muscular_groups">
        <action
            android:id="@+id/action_mGroups_to_exercises"
            app:destination="@id/chExercisesFragment">
            <argument
                android:name="idGroup"
                app:argType="com.mmfsin.noexcuses.presentation.models.IdGroup" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/chExercisesFragment"
        android:name="com.mmfsin.noexcuses.presentation.routines.exercises.ChExercisesFragment"
        android:label="chExercisesFragment"
        tools:layout="@layout/fragment_exercises" />

</navigation>