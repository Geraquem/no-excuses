<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notes_nav_graph"
    app:startDestination="@id/notesFragment">

    <fragment
        android:id="@+id/notesFragment"
        android:name="com.mmfsin.noexcuses.presentation.notes.NotesFragment"
        android:label="notesFragment"
        tools:layout="@layout/fragment_notes">
        <action
            android:id="@+id/action_notes_to_noteDetail"
            app:destination="@id/noteDetailFragment">
            <argument
                android:name="idNote"
                app:argType="string" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/noteDetailFragment"
        android:name="com.mmfsin.noexcuses.presentation.notes.detail.NoteDetailFragment"
        android:label="noteDetailFragment"
        tools:layout="@layout/fragment_note_detail" />

</navigation>